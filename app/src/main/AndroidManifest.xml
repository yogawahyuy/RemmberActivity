<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.d3ifcool.rememberactivities">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".TambahKegiatanActivity"
            android:label="Tambah Kegiatan" />
        <activity android:name=".LihatKegiatanActivity" />
        <activity android:name=".RincianKegiatanActivity" />
        <activity android:name=".PopupActivity" />
        <activity
            android:name=".TentangKamiActivity"
            android:label="Tentang Kami" />
        <activity
            android:name=".LihatPencapaianActivity"
            android:label="Lihat Pencapaian"></activity>
        <activity
            android:name=".PencapainDetailActivity"
            android:label="@string/title_activity_pencapain_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>